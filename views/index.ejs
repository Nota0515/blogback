  <script>
    (function () {
      const btn = document.getElementById('project-type-button');
      const list = document.getElementById('project-type-list');
      const selected = document.getElementById('project-type-selected');
      const hidden = document.getElementById('project-type-input');

      if (!btn || !list || !selected || !hidden) return;

      const closeList = () => {
        list.classList.add('hidden');
        btn.setAttribute('aria-expanded', 'false');
      };

      const openList = () => {
        list.classList.remove('hidden');
        btn.setAttribute('aria-expanded', 'true');
      };

      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        if (list.classList.contains('hidden')) openList(); else closeList();
      });

      list.addEventListener('click', (e) => {
        const li = e.target.closest('li[role="option"]');
        if (!li) return;
        const val = li.getAttribute('data-value');
        const text = li.textContent.trim();
        hidden.value = val;
        selected.textContent = text;
        closeList();
      });

      document.addEventListener('click', (e) => {
        if (!list.classList.contains('hidden')) {
          if (!btn.contains(e.target) && !list.contains(e.target)) closeList();
        }
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeList();
      });
    })();
  </script>

